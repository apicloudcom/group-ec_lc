<template>
	<view class="popups_spec_bg">
		<view class="detail-spec">
			<view class="detail-spec-goods">
				<image class="detail-spec-goods-img" src={info.image} mode="aspectFit"></image>
				<view class="detail-spec-goods-info">
					<text class="detail-spec-goods-info-price">￥{{info.action === 'cart' ? info.delprice : info.price}}</text>
					<text class="detail-spec-goods-info-inventory">库存: {{info.ku_num}}</text>
					<text class="detail-spec-goods-info-selected">已选: {{info.spec ? info.spec : '默认规格'}}</text>
				</view>
				<view class="detail-spec-goods-close" onclick="fnClosePopups">
					<image class="detail-spec-goods-close-icon" src="http://ae8b3ee28597856d3283.qiniucdn.apicloud-system.com/apicloud/8d48f3e9633ae1268871880ff4e27e6a.png"></image>
				</view>
			</view>
			<scroll-view class="detail-spec-content" scroll-y>
				<view class="detail-spec-item">
					<text class="detail-spec-item-label">规格</text>
					<view class="detail-spec-item-box">
						<text
							v-for="(item,index) in info.guige_data"
							:class="`detail-spec-item-item ${item.a == info.spec ? 'detail-spec-item-item-on' : ''}`"
							onclick="fnChooseGuige"
							data-spec={item.a}>{item.a}</text>
					</view>
				</view>
				<view class="detail-spec-item detail-spec-item-nums">
					<text class="detail-spec-item-label">数量</text>
					<view class="detail-spec-item-num">
						<text :class="`detail-spec-item-num-btn ${info.buynum == 1 ? ' card_btn_disable' : ''}`" onclick="fnMinusBuynum">-</text>
						<text class="detail-spec-item-num-text">{info.buynum}</text>
						<text class="detail-spec-item-num-btn" onclick="fnAddBuynum">+</text>
					</view>
				</view>
			</scroll-view>
			<view class="detail-spec-btns">
				<text class="detail-spec-btn btn_orange" v-if={info.action=='spec'} onclick="fnBtn1">{'单独购买('+info.delprice+'元)'}</text>
				<text class="detail-spec-btn btn_red" v-if={info.action=='spec'} onclick="fnBtn2">{'发起拼团('+info.price+'元)'}</text>
				<text class="detail-spec-btn btn_red" v-if={info.action!='spec'} onclick="fnconfirm">确定</text>
			</view>
			<safe-area></safe-area>
		</view>
	</view>
</template>
<script>
	export default {
		name: 'hoc-goods-spec-sgm',
		data(){
			return {
				bottom: -400,
				info: this.props.info || {
					image: 'http://ae8b3ee28597856d3283.qiniucdn.apicloud-system.com/apicloud/4bb17d1e558c34b813965d8b35e05407.png',
					action: 'cart',
					price: 120,
					delprice: 60,
					ku_num: 200,
					spec: '500ml',
					buynum: 5,
					guige_data: [{
						a: '500ml'
					}, {
						a: '600ml'
					}]
				}
			}
		},
		methods: {
			installed(){
				setTimeout(()=>{
					this.data.bottom = 0;
				}, 50);
			},
			fnClosePopups(){
				this.fire('closeSpec');
			},
			fnChooseGuige(e){
				let spec = e.currentTarget.dataset.spec;
				if (this.props.spec != spec) {
					this.fire('specChange', {spec: spec});
				}
			},
			fnMinusBuynum(){
				this.fire('minusNum');
			},
			fnAddBuynum(){
				this.fire('addNum', {action:this.props.action});
			},
			fnBtn1(){
				this.fire('btn1');
			},
			fnBtn2(){
				this.fire('btn2');
			},
			fnconfirm(){
				if (this.props.action == 'btn1') {
					this.fire('btn1');
				} else if (this.props.action == 'btn2') {
					this.fire('btn2');
				} else if (this.props.action == 'btn3') {
					this.fire('btn3');
				}
			}
		}
	}
</script>
